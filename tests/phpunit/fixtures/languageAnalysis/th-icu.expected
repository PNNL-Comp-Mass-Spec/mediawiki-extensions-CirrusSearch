{
    "analyzer": {
        "keyword": {
            "filter": [
                "truncate_keyword"
            ],
            "tokenizer": "no_splitting",
            "type": "custom"
        },
        "lowercase_keyword": {
            "filter": [
                "truncate_keyword",
                "icu_normalizer"
            ],
            "tokenizer": "no_splitting",
            "type": "custom"
        },
        "near_match": {
            "char_filter": [
                "near_space_flattener"
            ],
            "filter": [
                "icu_normalizer"
            ],
            "tokenizer": "no_splitting",
            "type": "custom"
        },
        "near_match_asciifolding": {
            "char_filter": [
                "near_space_flattener"
            ],
            "filter": [
                "truncate_keyword",
                "icu_normalizer",
                "asciifolding"
            ],
            "tokenizer": "no_splitting",
            "type": "custom"
        },
        "plain": {
            "char_filter": [
                "nnbsp_norm",
                "word_break_helper"
            ],
            "filter": [
                "icu_normalizer"
            ],
            "tokenizer": "standard",
            "type": "custom"
        },
        "plain_search": {
            "char_filter": [
                "nnbsp_norm",
                "word_break_helper"
            ],
            "filter": [
                "icu_normalizer"
            ],
            "tokenizer": "standard",
            "type": "custom"
        },
        "prefix": {
            "char_filter": [
                "near_space_flattener"
            ],
            "filter": [
                "icu_normalizer"
            ],
            "tokenizer": "prefix",
            "type": "custom"
        },
        "prefix_asciifolding": {
            "char_filter": [
                "near_space_flattener"
            ],
            "filter": [
                "icu_normalizer",
                "asciifolding"
            ],
            "tokenizer": "prefix",
            "type": "custom"
        },
        "short_text": {
            "filter": [
                "icu_normalizer",
                "aggressive_splitting",
                "asciifolding_preserve",
                "dedup_asciifolding"
            ],
            "tokenizer": "whitespace",
            "type": "custom"
        },
        "short_text_search": {
            "filter": [
                "icu_normalizer",
                "aggressive_splitting"
            ],
            "tokenizer": "whitespace",
            "type": "custom"
        },
        "source_text_plain": {
            "char_filter": [
                "word_break_helper_source_text"
            ],
            "filter": [
                "icu_normalizer"
            ],
            "tokenizer": "standard",
            "type": "custom"
        },
        "source_text_plain_search": {
            "char_filter": [
                "word_break_helper_source_text"
            ],
            "filter": [
                "icu_normalizer"
            ],
            "tokenizer": "standard",
            "type": "custom"
        },
        "suggest": {
            "filter": [
                "icu_normalizer",
                "suggest_shingle"
            ],
            "tokenizer": "standard",
            "type": "custom"
        },
        "suggest_reverse": {
            "filter": [
                "icu_normalizer",
                "suggest_shingle",
                "reverse"
            ],
            "tokenizer": "standard",
            "type": "custom"
        },
        "text": {
            "char_filter": [
                "nnbsp_norm",
                "apostrophe_norm",
                "split_camelCase",
                "word_break_helper",
                "thai_repl_pat",
                "dotted_I_fix",
                "thai_charfilter"
            ],
            "filter": [
                "homoglyph_norm",
                "icu_normalizer",
                "decimal_digit",
                "thai_stop",
                "asciifolding"
            ],
            "tokenizer": "icu_tokenizer",
            "type": "custom"
        },
        "text_search": {
            "char_filter": [
                "nnbsp_norm",
                "apostrophe_norm",
                "split_camelCase",
                "word_break_helper",
                "thai_repl_pat",
                "dotted_I_fix",
                "thai_charfilter"
            ],
            "filter": [
                "homoglyph_norm",
                "icu_normalizer",
                "decimal_digit",
                "thai_stop",
                "asciifolding"
            ],
            "tokenizer": "icu_tokenizer",
            "type": "custom"
        },
        "token_reverse": {
            "filter": [
                "reverse"
            ],
            "tokenizer": "no_splitting",
            "type": "custom"
        },
        "trigram": {
            "filter": [
                "icu_normalizer"
            ],
            "tokenizer": "trigram",
            "type": "custom"
        },
        "word_prefix": {
            "filter": [
                "icu_normalizer",
                "prefix_ngram_filter"
            ],
            "tokenizer": "standard",
            "type": "custom"
        }
    },
    "char_filter": {
        "apostrophe_norm": {
            "type": "mapping",
            "mappings": [
                "`=>'",
                "\u00b4=>'",
                "\u02b9=>'",
                "\u02bb=>'",
                "\u02bc=>'",
                "\u02bd=>'",
                "\u02be=>'",
                "\u02bf=>'",
                "\u02cb=>'",
                "\u055a=>'",
                "\\u05F3=>'",
                "\u2018=>'",
                "\u2019=>'",
                "\u201b=>'",
                "\u2032=>'",
                "\u2035=>'",
                "\ua78c=>'",
                "\uff07=>'",
                "\uff40=>'"
            ]
        },
        "dotted_I_fix": {
            "type": "mapping",
            "mappings": [
                "\u0130=>I"
            ]
        },
        "near_space_flattener": {
            "type": "mapping",
            "mappings": [
                "'=>\\u0020",
                "\\u2019=>\\u0020",
                "\\u02BC=>\\u0020",
                "_=>\\u0020",
                "-=>\\u0020"
            ]
        },
        "nnbsp_norm": {
            "type": "mapping",
            "mappings": [
                "\\u202F=>\\u0020"
            ]
        },
        "split_camelCase": {
            "type": "pattern_replace",
            "pattern": "(\\p{Ll}[\\p{M}\\p{Cf}]*)([\\p{Lu}\\p{Lt}])",
            "replacement": "$1 $2"
        },
        "thai_charfilter": {
            "type": "mapping",
            "mappings": [
                "_=>\\u0020",
                ";=>\\u0020",
                ":=>\\u0020",
                "\u00b7=>\\u0020",
                "\u2027=>\\u0020",
                "\u0e03=>\u0e02",
                "\u0e05=>\u0e04",
                "\\u0e4d\\u0e32=>\\u0e33",
                "\\u0e4d\\u0e48\\u0e32=>\\u0e48\\u0e33",
                "\\u0e4d\\u0e49\\u0e32=>\\u0e49\\u0e33",
                "\\u0e33\\u0e48=>\\u0e48\\u0e33",
                "\\u0e33\\u0e49=>\\u0e49\\u0e33",
                "\\u0E34\\u0E4D=>\\u0E36",
                "\\u0E4D\\u0E34=>\\u0E36"
            ]
        },
        "thai_repl_pat": {
            "type": "pattern_replace",
            "pattern": "(?<=\\p{Nd})([\u0e01-\u0e4f])|(?<=[\u0e01-\u0e4f])(\\p{Nd})|(?<=[\u0e01-\u0e4f])\\.([\u0e01-\u0e4f])",
            "replacement": " $1$2$3"
        },
        "word_break_helper": {
            "type": "mapping",
            "mappings": [
                "_=>\\u0020",
                ":=>\\u0020",
                ".=>\\u0020",
                "(=>\\u0020",
                ")=>\\u0020",
                "\uff0e=>\\u0020",
                "\uff3f=>\\u0020",
                "\uff1a=>\\u0020"
            ]
        },
        "word_break_helper_source_text": {
            "type": "mapping",
            "mappings": [
                "_=>\\u0020",
                ".=>\\u0020",
                "(=>\\u0020",
                ")=>\\u0020",
                ":=>\\u0020"
            ]
        }
    },
    "filter": {
        "aggressive_splitting": {
            "type": "word_delimiter_graph",
            "stem_english_possessive": false,
            "preserve_original": false
        },
        "asciifolding": {
            "type": "asciifolding",
            "preserve_original": false
        },
        "asciifolding_preserve": {
            "type": "asciifolding",
            "preserve_original": true
        },
        "dedup_asciifolding": {
            "type": "unique",
            "only_on_same_position": true
        },
        "icu_normalizer": {
            "type": "icu_normalizer",
            "name": "nfkc_cf"
        },
        "lowercase": {
            "type": "lowercase"
        },
        "prefix_ngram_filter": {
            "type": "edgeNGram",
            "max_gram": 255
        },
        "remove_empty": {
            "type": "length",
            "min": 1
        },
        "suggest_shingle": {
            "type": "shingle",
            "min_shingle_size": 2,
            "max_shingle_size": 3,
            "output_unigrams": true
        },
        "thai_stop": {
            "type": "stop",
            "stopwords": "_thai_"
        },
        "truncate_keyword": {
            "type": "truncate",
            "length": 5000
        }
    },
    "tokenizer": {
        "no_splitting": {
            "type": "keyword"
        },
        "prefix": {
            "type": "edgeNGram",
            "max_gram": 255
        },
        "trigram": {
            "type": "nGram",
            "min_gram": 3,
            "max_gram": 3
        }
    }
}